<?xml version="1.0" encoding="utf-8"?>
<access-policy>
  <cross-domain-access>
    <policy>
      <allow-from https-request-headers="*">
        <!--<domain uri="*"/>-->
        <domain uri="http://*.expertchoice.com"/>
        <domain uri="https://*.expertchoice.com"/>
      </allow-from>
      <grant-to>
        <resource path="/" include-subpaths="true"/>
      </grant-to>
    </policy>
  </cross-domain-access>
</access-policy>